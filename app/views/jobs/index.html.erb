<% if current_user.is_admin %>
  <div class="pull-right">
    <%= link_to("Add a job", new_job_path, class: "btn btn-default") %>
  </div>
<% else %>
  <div class="dropdown pull-right">
    <button class="btn btn-defult dropdown-toggle" type="button" id="dropdownMenuDivider"
    data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
      排序
      <span class="caret"></span>
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
      <li>
        <%= link_to("按照薪资下限排序", jobs_path(:order => "by_lower_bound")) %>
      </li>
      <li>
        <%= link_to("按照薪资上限拍戏", jobs_path(:order => "by_upper_bound")) %>
      </li>
      <li>
        <%= link_to("按照发表时间排序", jobs_path) %>
      </li>
    </ul>
  </div>
<% end %>

<br><br>

<table class="table table-boldered">
  <thead>
    <tr>
      <td>职缺</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
      <td>刊登时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
      <tr>
        <td><%= link_to(job.title, job_path(job)) %></td>
        <td><%= job.wage_lower_bound %></td>
        <td><%= job.wage_upper_bound %></td>
        <td><%= job.created_at %></td>
        <% if current_user.is_admin %>
          <td><%= link_to("Edit", edit_job_path(job))%> |
              <%= link_to("Destroy", job_path(job), method: :delete, data:{confirm: "Are you sure?"}) %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
